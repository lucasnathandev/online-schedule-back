datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Schedule {
  id        String   @id @default(uuid()) @map("_id") @db.ObjectId
  name      String
  date      DateTime
  time      DateTime
  createdAt DateTime @default(now())
}

model User {
  id       String  @id @default(uuid()) @map("_id") @db.ObjectId
  name     String? @unique
  password String?
  role     Role    @default(USER)
}

enum Role {
  USER
  ADMIN
}
